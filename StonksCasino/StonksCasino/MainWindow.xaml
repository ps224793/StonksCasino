<Window x:Class="StonksCasino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StonksCasino"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Img/Main/background.png" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Inloggen" Grid.Column="1" FontSize="30px" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Gebruikersnaam" Foreground="White" FontSize="16"></TextBlock>
            <TextBox Text="{Binding MyDatabase.MyUsername, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Foreground="White" Background="Black"></TextBox>
            <TextBlock Text="Wachtwoord" Foreground="White" FontSize="16"></TextBlock>
            <PasswordBox PasswordChar="*"  FontSize="20" Foreground="White" Background="Black" PasswordChanged="PasswordBox_PasswordChanged" ></PasswordBox>
            <!--<TextBox Text="{Binding MyDatabase.MyPassword, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Foreground="White" Background="Black"></TextBox>-->
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="1" Height="100" Width="200" Content="Inloggen" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="40px" Click="Library_Click"/>
    </Grid>
</Window>